%form{:action => '/register', :method => 'POST'}
	%fieldset.form-body
		- if errors.length
			%dl.validation-message
				%dt.heading Please correct the following errors:
				- errors.each do |s|
					%dt= s

		.editor-label
			%label{:for => 'username'} Username:
		.editor-field
			%input.text{:type => 'text', :name => 'username'}
	
		.editor-label
			%label{:for => 'Email'} Email:
		.editor-field
			%input.text{:type => 'text', :name => 'email'}

		.editor-label
			%label{:for => 'password'} Password:
		.editor-field
			%input.text{:type => 'password', :name => 'password'}
		
		.editor-label
		.editor-field
			%input{:type => 'submit', :value => 'Register'}
	