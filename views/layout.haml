%html
	%head
		%title doinnoth.in
		%link{:href => '/css/main.css', :rel => 'stylesheet', :type => 'text/css'}
		/[if lte IE 8]
		:javascript 
			document.createElement('footer');document.createElement('header');document.createElement('nav');
	%body
		#content
			%header
				%h1#title 
					%a{:href => '/'} Doin' Nothin'!
				%nav
					%a{:href => '/about', :title => 'About'} About
				- if authorized?
					%nav.user.logged-in
						Hello #{session[:username]}!
						%a{:href => '/sessions'} Sessions
						|
						%a{:href => '/logout'} Logout
				- else
					%nav.user.logged-out
						%a{:href => '/login'} Login
			%div#view
				=yield
			%footer
				A
				%a{:href => "http://http://www.sinatrarb.com", :title => "Sinatra"} Sinatra
				\+
				%a{:href => "http://haml-lang.com", :title => "Haml"} Haml
				\+
				%a{:href => "http://raphaeljs.com", :title => "Raphael JS"} Raphael
				\+
				%a{:href => "http://g.raphaeljs.com", :title => "gRaphael JS"} gRaphael
				\+
				%a{:href => "http://couchdb.apache.org/"} CouchDB
				\+
				%a{:href => "https://cloudant.com/"} CloudAnt
				\+
				%a{:href => "http://bcrypt-ruby.rubyforge.org/"} bcrypt-ruby
				\+
				%a{:href => "http://heroku.com"} Heroku
				\+
				%a{:href => "https://github.com/aaronpowell/doinnothin"} GitHub
				\ experiment by
				%a{:href => "http://aaron-powell.com"} Aaron Powell
				\.
			
